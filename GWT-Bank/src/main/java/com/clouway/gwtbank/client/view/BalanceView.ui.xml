<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        .panel{
            width: 400px;
            margin: 0 auto;
        }
        .labels{
            font-size: 30px;
        }
        .a{
            font-size: 20px;
        }
        a:hover{
            text-decoration: underline;
            cursor:pointer;
        }
    </ui:style>
    <g:HTMLPanel styleName="{style.panel}">
        <g:Label ui:field="titleLabel" text="Current Balance" styleName="{style.labels}"/>
        <g:Label ui:field="balanceLabel" styleName="{style.labels}"/>
        <g:Anchor ui:field="goBackLink" text="Go back" styleName="{style.a}"/>
    </g:HTMLPanel>
</ui:UiBinder>