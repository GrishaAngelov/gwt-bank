<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:m="urn:import:com.clouway.gwtbank.client.editor">
    <ui:style>
        .panel {
            background-color: #808080;
            width: 200px;
            margin: 0 auto;
            font-size: 40px;
        }

        .titleLabel{
            text-align: center;
            font-size: 50px;
        }

        .btn{
            text-align: center;
            margin-top:10px;
        }
    </ui:style>

    <g:VerticalPanel styleName="{style.panel}">
        <g:Label ui:field="titleLabel" text="Log In" styleName="{style.titleLabel}"/>
        <m:UserEditor ui:field="userEditor"/>
        <g:Button ui:field="loginButton" text="Login" styleName="{style.btn}"/>
    </g:VerticalPanel>
</ui:UiBinder>