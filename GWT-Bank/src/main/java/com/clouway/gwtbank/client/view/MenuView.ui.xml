<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        .panel {
            width: 400px;
            margin: 0 auto;
            font-size: 40px;
            padding-top: 30px;
            font-size: 20px;
        }

        .a:hover {
            cursor: pointer;
            text-decoration: underline;
        }
    </ui:style>

    <g:HTMLPanel styleName="{style.panel}">
        <g:Anchor ui:field="balanceLink" text="Balance" styleName="{style.a}"/>
        <g:Anchor ui:field="depositLink" text="Deposit" styleName="{style.a}"/>
        <g:Anchor ui:field="withdrawLink" text="Withdraw" styleName="{style.a}"/>
    </g:HTMLPanel>
</ui:UiBinder>